# AI Camera Assistant - Environment Configuration

# Application Settings
APP_NAME=AI Camera Assistant
APP_VERSION=1.0.0
DEBUG_MODE=false
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Database Configuration
DATABASE_URL=sqlite:///./ai_camera_assistant.db
DATABASE_ECHO=false

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_ORIGINS=*
CORS_ENABLED=true
BCRYPT_ROUNDS=12

# LLM Configuration
OLLAMA_URL=http://ollama:11434
MODEL_NAME=llava:7b
WHISPER_MODEL=whisper:latest
GPU_ENABLED=true
MAX_TOKENS=2048
TEMPERATURE=0.7

# Camera Settings
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30
CAMERA_DEVICE=0
FRAME_QUALITY=80

# Audio Settings
AUDIO_SAMPLE_RATE=44100
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=1024
AUDIO_FORMAT=16
MICROPHONE_ENABLED=true
SPEAKER_ENABLED=true

# Performance Settings
MAX_CONNECTIONS=10
PROCESSING_TIMEOUT=30
FRAME_BUFFER_SIZE=5
AUDIO_BUFFER_SIZE=10

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,mp3,wav,mp4

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=noreply@aicameraassistant.com

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=7
BACKUP_DIR=backups

# Development Settings
RELOAD_ON_CHANGE=true
AUTO_MIGRATE=true
CREATE_DEFAULT_USER=true
DEFAULT_USERNAME=admin
DEFAULT_PASSWORD=admin123

# Production Settings
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=
FORCE_HTTPS=false

# Logging Configuration
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_TWO_FACTOR=false
ENABLE_SOCIAL_LOGIN=false
ENABLE_API_DOCS=true
ENABLE_METRICS=true
ENABLE_PROFILING=false
